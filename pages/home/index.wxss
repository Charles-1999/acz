/* pages/home/index.wxss */
.swiper{
  width: 90%;
  margin: 20rpx auto;
  border-radius: 10rpx;
  box-shadow: 0rpx 0rpx 10rpx  0rpx #ccc;
  overflow: hidden;
}

.swiper_item {
  display: flex;
  justify-content: center;
  align-content: center;
  width: 100%;
  height: 100%;
  background-color: var(--themeColor);
}

.main {
  width: 90%;
  margin: 30rpx auto;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  border-radius: 10rpx;
  box-shadow: 0rpx 0rpx 10rpx  0rpx #ccc;
  overflow: hidden;
}

.main .item {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50%;
  height: 180rpx;
  /* background-color: pink; */
  border-bottom: 1px solid #f1f1f1;
  box-sizing: border-box;
}

.main .item:nth-child(odd) {
  border-right: 1px solid #f1f1f1;
}

.main .item .iconfont {
  font-size: 80rpx;
  margin-right: 20rpx;
}

.main .item image{
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}