/* stu_list */
.stu_list .stu_warp {
  display: flex;
  align-items: center;
  height: 100rpx;
  padding: 0 20rpx;
}

.stu_list .head_portrait {
  width: 80rpx;
  height: 80rpx;
  margin: 0 30rpx 0 10rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.stu_list .head_portrait image {
  width: 100%;
  height: 100%;
}

.stu_list .name_warp {
  display: flex;
  align-items: center;
  flex: 1;
  height: 100%;
  font-size: 36rpx;
  border-bottom: 1px solid #eee;
}

/* footer_bar */
.footer_bar {
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  padding: 10rpx 20rpx;
  border-top: 1px solid #ccc;
  background-color: #fff;
}

.footer_bar .all_checkbox_warp{
  flex: 2;
  height: 80rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.footer_bar .all_checkbox_warp .all_checkbox_text {
  font-size: 24rpx;
  color: darkgrey;
}

.footer_bar .right {
  flex: 4;
  display: flex;
  justify-content: flex-end;
}

.footer_bar .right .unified {
  /* flex: 3; */
  display: flex;
  /* flex-direction: column; */
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  font-size: 26rpx;
  color: darkgrey;
}

.footer_bar .right .unified switch {
  margin-left: 10rpx;
}

.footer_bar button{
  flex: 5;
  width: 100rpx;
  height: 80rpx;
  margin: 0;
  padding: 0;
  line-height: 80rpx;
  color: #fff;
  background-color: var(--themeColor);
}

checkbox .wx-checkbox-input {
  border-radius: 50%;
  /* 圆角 */
  width: 40rpx;
  /* 背景的宽 */
  height: 40rpx;
  /* 背景的高 */
}
checkbox .wx-checkbox-input-checked {
  border-radius: 50%;
  /* 圆角 */
  background: var(--themeColor);
  width: 40rpx;
  height: 40rpx;
}
checkbox .wx-checkbox-input-checked::before {
  border-radius: 50%;
  /* 圆角 */
  width: 40rpx;
  /* 选中后对勾大小，不要超过背景的尺寸 */
  height: 40rpx;
  /* 选中后对勾大小，不要超过背景的尺寸 */
  line-height: 40rpx;
  text-align: center;
  font-size: 30rpx;
  /* 对勾大小 30rpx */
  color: #fff;
  /* 对勾颜色 白色 */
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.isIphoneX {
  height: 150rpx !important;
}
