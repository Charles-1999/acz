/* pages/stuDetail/index.wxss */
page {
  background-color: #f1f6fe
}

.head_warp {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.head_warp .head_portrait {
  width: 200rpx;
  height: 200rpx;
  margin: 30rpx 0;
  border-radius: 50%;
  box-shadow: 0rpx 0rpx 10rpx 1rpx #26baee;
  overflow: hidden;
}

.head_warp .head_portrait image {
  width: 100%;
  height: 100%;
}

.head_warp .name {
  font-size: 40rpx;
  font-weight: 700;
}

.info_warp {
  margin: 20rpx;
}

.info_warp .title {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 10rpx;
  color: var(--themeColor);
}

.info_warp .content {
  font-size: 30rpx;
  line-height: 60rpx;
}

.info_warp .self_info,
.info_warp .parent_info {
  margin-bottom: 40rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  background-color: #fff;
  box-shadow: 0rpx 0rpx 10rpx 1rpx #eee;
}